---
// Determinar el idioma basado en la URL
const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';

// Textos según el idioma
const texts = {
	es: {
		title: "Ilustrador profesional y artista conceptual"
	},
	en: {
		title: "Professional Illustrator and Concept Artist"
	}
};

const currentTexts = texts[lang];
---
<div class="box">
	<h1 class="title">{currentTexts.title}</h1>
	<div class="content">
		<slot />
	</div>
</div>


<style>
	/* Estructura general compartida */
	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999);
		box-shadow: var(--shadow-sm);
		width: 100%;
		display: flex;
		flex-direction: column;
		text-align: center;
		gap: 1rem;
	}
	
	/* Título */
	.title {
		font-size: var(--text-2xl);
		color: var(--gray-0);
		margin: 0;
		line-height: 1.2;
	}
	
	/* Contenido de Hero */
	.content {
		display: flex;
		justify-content: center;
		align-items: center;
		width: 100%;
	}
	
	/* Ajustes responsivos */
	@media (min-width: 50em) {
		.box {
			padding: 1rem;
			border-radius: 1rem;
		}
	
		.title {
			font-size: var(--text-2xl);
		}
	}
	
	@media (min-width: 75em) {
		.box {
			padding: 1.5rem;
			border-radius: 1.5rem;
		}
	
		.title {
			font-size: var(--text-4xl);
		}
	}

	@media (max-width: 480px) {
		.box {
			padding: 1rem;
			gap: 1.5rem;
		}

		.title {
			font-size: var(--text-lg);
		}
	}
</style>
	
	