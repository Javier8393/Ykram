---
import Icon from "./Icon.astro";
import type { iconPaths } from "./IconPaths";

// Determinar el idioma basado en la URL
const lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es';

// Textos según el idioma
const texts = {
	es: {
		experience: "Experiencia",
		experienceDesc1: "Desde 2017 he trabajado en proyectos internacionales, en áreas como: Juegos de mesa, Libros, Cine y Videojuegos.", 
		experienceDesc2: "Para mí, cada proyecto es único y especial. Pongo toda mi creatividad y experiencia a tu disposición para lograr un resultado de alta calidad.",
		podcast: "Concept Art",
		podcastTitle: "El Camino del ilustrador",
		podcastDesc1: "Un programa dedicado al dibujo con entrevistas a profesionales de distintas áreas.",
		podcastDesc2: "Aquí hablaremos de actualidad y diferentes procesos creativos. ¡Nos vemos en el camino!",

	},
	en: {
		experience: "Experience",
		experienceDesc1: "Since 2017, I have worked on international projects in areas such as: Board Games, Books, Cinema, and Video Games.", 
		experienceDesc2: "For me, every project is unique and special. I put all my creativity and experience at your disposal to achieve a high-quality result.",
		podcast: "Concept Art",
		podcastTitle: "The Illustrator's Journey",
		podcastDesc1: "A show dedicated to drawing with interviews with professionals from different fields.",
		podcastDesc2: "Here we will talk about current topics and various creative processes. See you on the journey!",

	}
};

const currentTexts = texts[lang];

const iconLinks: {
	label: string;
	href: string;
	icon: keyof typeof iconPaths;
}[] = [
	{
		label: "Spotify",
		href: "https://open.spotify.com/show/1CI2iK8Rv4AQWCvazJd2fI?si=o6FCuhZ1QTuXzPLuFRpa_g&nd=1&dlsi=a826e8b43be14771",
		icon: "spotify",
	},
	{
		label: "Ivoox",
		href: "https://www.ivoox.com/podcast-camino-del-ilustrador_sq_f1831710_1.html",
		icon: "ivoox",
	},
	{
		label: "Youtube",
		href: "https://youtube.com/@elcaminodelilustrador",
		icon: "youtube",
	},
	{
		label: "Apple Podcast",
		href: "https://podcasts.apple.com/es/podcast/el-camino-del-ilustrador/id1493738985",
		icon: "apple",
	},
];
---

<section class="box skills">
		<div class="stack gap-1 lg:gap-2">
			<h3>
				<Icon icon="expert" color="var(--accent-regular)" size="2.5rem" />
				{currentTexts.experience}
			</h3>
			<p>
				{currentTexts.experienceDesc1}
				<br /><br />
				{currentTexts.experienceDesc2}
			</p>
		</div>

		<div class="stack gap-1 lg:gap-2">
			<h2>
				<div class="socials">
					<div class="icons">
						{
							iconLinks.map(({ href, icon, label }) => (
								<a href={href} class="social" title={label}>
									<Icon
										color="var(--accent-regular)"
										size="2.5rem"
										icon={icon}
									/>
								</a>
							))
						}
					</div>
					<span class="podcast-label">Podcast:</span>
				</div>
			</h2>
			<h5>{currentTexts.podcastTitle}</h5>
			<p>
				{currentTexts.podcastDesc1}
				<br /><br />
				{currentTexts.podcastDesc2}
			</p>
	</div>
</section>

<style>
	.box {
		border: 1px solid var(--gray-800);
		border-radius: 0.75rem;
		padding: 1.5rem;
		background-color: var(--gray-999);
		box-shadow: var(--shadow-sm);
		width: 100%; 
	}

	.skills {
		display: grid;
		grid-template-columns: 1fr; 
		gap: 3rem;
		width: 100%; 
	}

	.socials {
		display: flex;
		flex-wrap: wrap;
		align-items: center; 
		gap: 0.5rem;
		font-size: var(--icon-size);
	}

	.icons {
		display: flex;
		gap: 0.5rem; 
	}

	.social {
		display: flex;
		padding: var(--icon-padding);
		text-decoration: none;
		color: var(--accent-dark);
		transition: color var(--theme-transition);
	}

	.podcast-label {
		margin-left: 1rem; 
	}

	/* Estilo de texto para moviles*/
	.skills h2 {
		font-size: var(--text-md);
	}

	.skills h5 {
		font-size: var(--text-md);
	}

	.skills p {
		font-size: var(--text-sm);
	}

	/* Texto para pantalla tablet */
	@media (min-width: 50em) {
		.skills {
			grid-template-columns: repeat(2, 1fr);
			gap: 5rem;
		}

		.socials {
			flex-direction: row;
			text-align: center;
		}
	}

	/* Texto para pantalla pc */

	@media (min-width: 75em) {
		.box {
			border-radius: 1.5rem;
			padding: 2.5rem;
		}

		.skills h2 {
			font-size: var(--text-3xl);
		}

		.skills p {
			font-size: var(--text-lg);
		}
	}
</style>
