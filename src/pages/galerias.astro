---
import BaseLayout from '../layouts/BaseLayout.astro';
import Carousel from '../components/Carousel.astro';
---

<BaseLayout>
    
    <div class="gallery-container">
        <div>
            <h4>Ilustraciones</h4>
            <a href="/ilustraciones">
                <img src="/assets/ilustraciones.jpg" alt="Ilustraciones" class="gallery-image" />
            </a>
        </div>
        
        <div>
            <h4>Concept Art</h4>
            <a href="/concept-art">
                <img src="/assets/concept-art.jpg" alt="Concept Art" class="gallery-image" />
            </a>
        </div>
    </div>
    
</BaseLayout>

<style>
    .gallery-container {
        display: flex;
        justify-content: center; /* Centra las imágenes en el contenedor */
        align-items: center;
        gap: 2rem; /* Espacio entre las imágenes */
        margin-top: 2rem; /* Espacio en la parte superior */
        flex-wrap: wrap; /* Permite que las imágenes se ajusten en pantallas más pequeñas */
        width: 100%; /* Asegura que el contenedor ocupe todo el ancho de la ventana */
        overflow: hidden; /* Evita el desbordamiento */
        padding-bottom: 100px; /* Espacio para el footer */
    }

    .gallery-image {
        width: 100%; /* Cambiar el ancho a 100% para ocupar todo el espacio */
        max-width: 750px; /* Mantiene el tamaño máximo deseado */
        height: auto; /* Mantiene la proporción de la imagen */
        border-radius: 1rem; /* Bordes redondeados */
        box-shadow: var(--shadow-md); /* Sombra para efecto visual */
        transition: transform 0.3s; /* Efecto de transición */
    }

    .gallery-image:hover {
        transform: scale(1.05); /* Efecto al pasar el cursor */
    }

    @media (max-width: 768px) {
        .gallery-image {
            width: 80%; /* Ajusta el tamaño en pantallas más pequeñas */
            max-width: none; /* Elimina el límite máximo en pantallas pequeñas */
        }
    }

    body {
        margin: 0; /* Elimina el margen del body para evitar espacios adicionales */
        background-color: transparent; /* Asegura que el fondo no tenga color */
        height: 100vh; /* Asegura que el body ocupe exactamente la altura de la ventana */
    }
</style>
